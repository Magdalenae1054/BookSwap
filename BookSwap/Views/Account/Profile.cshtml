@model BookSwap.Models.ViewModels.UserProfileViewModel

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="card shadow-sm p-4 mt-4">

            <div class="text-center mb-3">
                <i class="bi bi-person-circle" style="font-size: 60px;"></i>
                <h3 class="mt-2">@Model.User.FullName</h3>
                <p class="text-muted">@Model.User.Email</p>
            </div>

            <hr />

            <div class="text-center mb-3">
                <h5>Prosječna ocjena</h5>
                <h2 class="text-warning">
                    @Model.AverageRating.ToString("0.0") ⭐
                </h2>
            </div>

            @if (Model.CanRate)
            {
                <a class="btn btn-warning"
                   asp-controller="Account"
                   asp-action="AddRating"
                   asp-route-toUserId="@Model.User.UserId">
                    ⭐ Ocijeni korisnika
                </a>
            }

        </div>

    </div>
</div>
