@{
    ViewData["Title"] = "Ocijeni korisnika";
}

<div class="card shadow p-4">
    <h3>⭐ Ocijeni korisnika</h3>

    <form method="post">



        <input type="hidden" name="toUserId" value="@ViewBag.ToUserId" />

        <label class="form-label" for="stars">Ocjena</label>
        <select id="stars" name="stars" class="form-select" required>
            <option value="">-- Odaberi --</option>
            <option value="1">★</option>
            <option value="2">★★</option>
            <option value="3">★★★</option>
            <option value="4">★★★★</option>
            <option value="5">★★★★★</option>
        </select>

        <label class="form-label" for="comment">Komentar</label>
<textarea id="comment" name="comment" class="form-control"></textarea>

        <button type="submit" class="btn btn-success">Spremi</button>
    </form>
</div>
