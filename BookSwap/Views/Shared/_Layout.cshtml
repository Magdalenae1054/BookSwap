<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookSwap</title>

    <!-- Bootstrap CSS (CDN sa SRI) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-ENjdO4Dr2bkBIFxQpeoA6DQD1KqQ8K/uxZ1Y5nI5nCT4nY5nU8n0RSJoZ+n"
          crossorigin="anonymous" />

    <!-- Bootstrap Icons (CDN sa SRI) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
          rel="stylesheet"
          integrity="sha384-YF6FQZK9E8kNnXl16rDpD+s/COM24kTx5c5NyEJD7BqXc9E+u6KDAdAm8XK1sC3y"
          crossorigin="anonymous" />


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookSwap.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookSwap</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Lijevi dio -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                     @*    <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Account"
                               asp-action="Users">
                                👥 Korisnici
                            </a>
                        </li> *@

                    </ul>

                    <!-- Desni dio -->
                    @{
                        var username = Context.Session.GetString("FullName");
                    }
                    <ul class="navbar-nav ms-auto">
                        @if (!string.IsNullOrEmpty(username))
                        {
                              <li class="nav-item">
                                   <span class="nav-link text-dark">Hello, @username!</span>
                               </li>

                               <li class="nav-item">
                                   <a class="nav-link text-dark"
                                      asp-controller="Account"
                                      asp-action="Profile"
                                      asp-route-id="@Context.Session.GetString("UserId")">
                                       <i class="bi bi-person-circle"></i> Moj profil
                                   </a>
                               </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </a>
                                </li>
                           
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-person"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BookSwap - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
