@model BookSwap.Models.Book

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Title">
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    <h5 class="text-muted">@Model.Author</h5>

                    <p class="mt-3">@Model.Description</p>

                    <a asp-controller="Books" asp-action="Index" class="btn btn-secondary mt-3">
                        ← Povratak na listu knjiga
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

