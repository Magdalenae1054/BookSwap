@model BookSwap.Models.Book

@{
    ViewData["Title"] = @Model.Title;
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <h5 class="text-muted">Autor: @Model.Author</h5>
            <p class="mt-3">@Model.Description</p>
            <p><strong>Žanr:</strong> @Model.Genre</p>

            <a asp-controller="Books" asp-action="Index" class="btn btn-secondary mt-3">
                <i class="bi bi-arrow-left"></i> Povratak na pregled knjiga
            </a>
        </div>
    </div>
</div>
